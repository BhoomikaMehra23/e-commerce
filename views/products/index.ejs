</style>
<body>
    <div id="flex">
      <img id="img2" src="https://static.vecteezy.com/system/resources/previews/000/616/943/original/vector-shopping-bag-icon.jpg" width="70px" height="70px" >
    
        <h1>Shopping Cart</h1>
    </div>
    <div class="row">
    

        <% for(let item of products){ %>
    
            <div class="col-lg-4 product-card">
                <div class="card text-center shadow mt-3 mx-auto" style="width: 18rem; top: 15vh;">
                    <img class="img" src="<%=item.img%>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h3 class="card-title"> <%= item.name %> </h3>
                      <h5 class="card-title"> Rs: <%= item.price %> </h5>
                      <p class="card-text"> <%= item.desc %> </p>
                      <a href="/products/<%=item._id%>" class="btn btnn btn-primary">View Product</a>
                    </div>
                </div>
            </div>
            
        <% } %>
    </div>
    
</body>
